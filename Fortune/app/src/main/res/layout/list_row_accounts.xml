<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/account_list_row_height" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/account_list_half_row_height"
        android:layout_height="@dimen/account_list_row_height"
        android:layout_marginEnd="@dimen/default_horizontal_margin"
        android:layout_marginStart="@dimen/default_horizontal_margin"
        android:src="@drawable/ic_fab"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/account_list_half_row_height"
        android:gravity="bottom"
        android:textSize="@dimen/mid_text_size"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/icon"
        android:layout_toStartOf="@id/account_balance"
        android:layout_toEndOf="@id/icon"
        android:layout_toLeftOf="@id/account_balance" />

    <TextView
        android:id="@+id/account_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/account_list_half_row_height"
        android:gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toStartOf="@id/account_balance"
        android:layout_below="@id/account_name"
        android:layout_toEndOf="@id/icon"
        android:layout_toLeftOf="@id/account_balance" />

    <TextView
        android:id="@+id/account_balance"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/account_list_row_height"
        android:textSize="@dimen/mid_text_size"
        android:layout_marginEnd="@dimen/default_horizontal_margin"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/default_horizontal_margin" />

</RelativeLayout>